<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#80000000"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:id="@+id/activity_image_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/activity_image_backBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:background="@null"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/activity_image_title"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="8.5"
            android:text="Title"
            android:gravity="left|center_vertical" />

    </LinearLayout>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/activity_image_photoView"
        android:layout_width="380dp"
        android:layout_height="380dp"
        app:layout_constraintTop_toBottomOf="@id/activity_image_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ff000000"
        android:src="@drawable/share_item_background"
        android:scaleType="fitCenter" />

</androidx.constraintlayout.widget.ConstraintLayout>