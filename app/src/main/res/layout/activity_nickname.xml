<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:id="@+id/activity_nickname_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/activity_nickname_backBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:background="@null"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/activity_nickname_title"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="7"
            android:text="Title"
            android:gravity="left|center_vertical" />

        <Button
            android:id="@+id/activity_nickname_okBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:background="@null"
            android:text="완료" />
    </LinearLayout>

    <!-- todo: constraint > linear > constriant > (editText, Button) , textView -->
    <!-- todo: 이 방법도 생각해보자 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_nickname_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_nickname_header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <!-- todo: 위 방법이 정해지면 EditText의 Margin 값 삭제-->
        <EditText
            android:id="@+id/activity_nickname_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="80dp"
            android:text="New Nickname"
            android:gravity="center" />

        <Button
            android:id="@+id/activity_nickname_deleteBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="@id/activity_nickname_editText"
            app:layout_constraintTop_toTopOf="@id/activity_nickname_editText"
            app:layout_constraintBottom_toBottomOf="@id/activity_nickname_editText"
            android:text="X"
            android:textSize="10sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/activity_nickname_length_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/activity_nickname_editText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Length"
            android:gravity="center" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>