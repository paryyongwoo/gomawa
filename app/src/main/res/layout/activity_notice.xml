<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:id="@+id/activity_notice_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/activity_notice_backBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:background="@null"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/activity_notice_title"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="8.5"
            android:text="Title"
            android:textColor="#ff000000"
            android:gravity="start|center_vertical" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_notice_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_notice_header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <!-- 리사이클러 뷰 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_notice_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>