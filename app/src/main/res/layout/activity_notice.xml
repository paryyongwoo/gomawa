<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:id="@+id/activity_notice_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/activity_notice_backBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:background="@null"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/activity_notice_title"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="8.5"
            android:text="Title"
            android:textColor="#ff000000"
            android:gravity="start|center_vertical" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_notice_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_notice_header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <!-- 리스트 뷰 -->
        <ListView
            android:id="@+id/activity_notice_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <!-- 본문 -->
        <LinearLayout
            android:id="@+id/activity_notice_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/activity_notice_dsc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="19"
                android:text="dsc dsc dsc dsc dsc"
                android:textColor="#ff000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activity_notice_dsc_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1996-06-12"
                android:textColor="#ff000000"
                android:gravity="end|center_vertical" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>