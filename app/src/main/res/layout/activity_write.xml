<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:paddingHorizontal="20dp">

    <LinearLayout
        android:id="@+id/activity_write_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/activity_write_header_backBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:background="@null"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/activity_write_header_title"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="8.5"
            android:text="Title"
            android:textColor="#ff000000"
            android:gravity="start|center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_write_shareItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_write_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/activity_write_shareItem_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/activity_write_shareItem_header_profile_imageView"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/activity_share_profile"
                app:civ_border_width="@null" />

            <TextView
                android:id="@+id/activity_write_shareItem_header_nickName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="귀요미"
                android:layout_weight="5"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/activity_write_shareItem_header_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="#ff000000"
                android:layout_weight="5"
                android:gravity="right|center_vertical"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_write_shareItem_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/activity_write_shareItem_body_imageView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/share_item_background"
                android:background="@color/inactiveColor"
                android:scaleType="fitXY" >

            </ImageView>

            <EditText
                android:id="@+id/activity_write_shareItem_body_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EditText"
                android:textSize="13sp"
                android:textColor="#ff000000" />


            <!-- 구분선 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/inactive_line"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_write_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="2" />

            <Button
                android:id="@+id/activity_write_bottom_ok_button"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="확인"
                android:textColor="#ff000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/activity_write_bottom_cancel_button"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="취소"
                android:textColor="#ff000000"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>