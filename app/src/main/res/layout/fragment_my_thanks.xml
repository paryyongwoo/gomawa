<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="@drawable/background">

    <include
        layout="@layout/header" />

    <ImageView
        android:id="@+id/fragment_my_thanks_inactive_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/inactive_line"
        app:layout_constraintTop_toTopOf="@+id/fragment_my_thanks_header_status"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="22dp" />

    <LinearLayout
        android:id="@+id/fragment_my_thanks_header_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/fragment_my_thanks_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginRight="12dp"
            android:background="@null" />

        <ImageButton
            android:id="@+id/fragment_my_thanks_btn_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:background="@null"
            android:src="@drawable/btn_one" />

        <ImageButton
            android:id="@+id/fragment_my_thanks_btn_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:background="@null"
            android:src="@drawable/btn_two_disable" />

        <ImageButton
            android:id="@+id/fragment_my_thanks_btn_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:background="@null"
            android:src="@drawable/btn_three_disable" />

        <ImageButton
            android:id="@+id/fragment_my_thanks_btn_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/btn_complete_disable" />

        <ImageButton
            android:id="@+id/fragment_my_thanks_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_marginLeft="12dp"
            android:background="@null" />
    </LinearLayout>

    <com.gomawa.viewpager.CustomViewPager
        android:id="@+id/thanksPager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_my_thanks_header_status" />


</androidx.constraintlayout.widget.ConstraintLayout>