<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:background="@drawable/background">

        <include layout="@layout/header" />

        <LinearLayout
            android:id="@+id/share_header_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:background="@drawable/share_header_background"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@null"
                    android:src="@drawable/write_btn_disable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/inactiveColor"
                    android:textSize="10dp"
                    android:text="글쓰기" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@null"
                    android:src="@drawable/list_btn_disable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/inactiveColor"
                    android:textSize="10dp"
                    android:text="목록" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@null"
                    android:src="@drawable/user_btn_disable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/inactiveColor"
                    android:textSize="10dp"
                    android:text="내글보기" />

            </LinearLayout>
        </LinearLayout>

        <com.gomawa.viewpager.CustomViewPager
            android:id="@+id/thanksPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/share_header_menu"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="38dp"
            android:background="@color/inactiveColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>