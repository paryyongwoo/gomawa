<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recyclerView_comment_profile_imageView"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/activity_share_profile"
        app:civ_border_width="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recyclerView_comment_nickName_textView"
                android:layout_width="0dp"
                android:layout_height="28dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/recyclerView_comment_buttons"
                android:text="aaaaaaaaaa"
                android:textColor="#ff000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/recyclerView_comment_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/recyclerView_comment_update_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/pen"
                    android:scaleType="fitXY"
                    android:background="@null" />

                <ImageButton
                    android:id="@+id/recyclerView_comment_delete_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/logout"
                    android:scaleType="fitXY"
                    android:background="@null" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/recyclerView_comment_content_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment's Content"
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/recyclerView_comment_date_textView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Comment's date"
            android:textColor="@color/inactiveColor"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/inactive_line"
            android:scaleType="fitXY" />

    </LinearLayout>

</LinearLayout>