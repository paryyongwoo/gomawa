<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- HEADER - 프로필 이미지 & 닉네임 & Date -->
    <LinearLayout
        android:id="@+id/recyclerView_item_share_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/share_profile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/activity_share_profile"
            app:civ_border_width="@null" />

        <TextView
            android:id="@+id/share_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="귀요미"
            android:layout_weight="5"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/share_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:layout_weight="5"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <!-- BODY - 이미지 & 버튼 & Content -->
    <LinearLayout
        android:id="@+id/recyclerView_item_share_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/recyclerView_item_share_body_background_imageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/share_item_background"
            android:background="@color/inactiveColor"
            android:scaleType="fitXY"
            >

        </ImageView>

        <LinearLayout
            android:id="@+id/recyclerView_item_share_body_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="right" >

            <LinearLayout
                android:id="@+id/recyclerView_item_share_body_menu_my"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start"
                android:visibility="invisible" >

                <ImageButton
                    android:id="@+id/recyclerView_item_share_body_menu_my_delete"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/logout"
                    android:background="@null"
                    android:scaleType="fitCenter" />

                <ImageButton
                    android:id="@+id/recyclerView_item_share_body_menu_my_edit"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/pen"
                    android:background="@null"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recyclerView_item_share_body_menu_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end" >

                <ImageButton
                    android:id="@+id/recyclerView_item_share_body_menu_all_like"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/menu_my_thanks_icon"
                    android:background="@null"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/recyclerView_item_share_body_menu_all_likeNum"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="Num"
                    android:textSize="12sp"
                    android:textColor="#ff000000" />

                <ImageButton
                    android:id="@+id/recyclerView_item_share_body_menu_all_download"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/download"
                    android:background="@null"
                    android:scaleType="fitCenter" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/recyclerView_item_share_body_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/recyclerView_item_share_body_content_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="13sp"
                android:textColor="@color/inactiveColor"
                android:visibility="visible" />

            <EditText
                android:id="@+id/recyclerView_item_share_body_content_editText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="EditText"
                android:textSize="13sp"
                android:visibility="invisible" />

        </FrameLayout>

        <!-- 구분선 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/inactive_line"
            android:scaleType="fitXY" />

    </LinearLayout>

    <!-- BOTTOM - 댓글 보기 & 수정 완료 todo: 나중에 레이아웃으로 감싸주는 게 예쁨 -->
    <TextView
        android:id="@+id/recyclerView_item_share_bottom_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Comment And Edit Finish" />

</LinearLayout>