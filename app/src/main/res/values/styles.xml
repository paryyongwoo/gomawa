<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryDark">@color/activeColor</item>
        <item name="colorAccent">@color/inactiveColor</item>
        <item name="android:statusBarColor">@color/inactiveColor</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textViewStyle">@style/CafeFontTextView</item>
        <item name="android:buttonStyle">@style/CafeFontButton</item>
        <item name="android:editTextStyle">@style/CafeFontEditText</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>
    
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@color/inactiveColor</item>
        <item name="android:textColor">@color/inactiveColor</item>
        <item name="android:textColorHint">@color/grayColor</item>
        <item name="android:textColorHighlight">@color/inactiveColor</item>
    </style>

    <!-- 반투명 배경 전용 Style -->
    <style name="Transparent" parent="@style/Theme.AppCompat">
        <!-- 타이틀바 제거 -->
        <!-- <item name="windowNoTitle">true</item> -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!-- true - 반투명 검정 / false - 완전 투명 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 다이얼로그 뜨고 사라질 때 애니메이션 -->
    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_open</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_close</item>
    </style>

    <!-- 글 쓰기/수정 액티비티 전용 Style -->
    <style name="WriteAndUpdateStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/mainColor</item>
    </style>

    <style name="EditTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/inactiveColor</item>
        <item name="android:fontFamily">@font/cafe_font</item>
    </style>

    <!--  뷰별로 폰트 적용  -->
    <style name="CafeFontTextView" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/cafe_font</item>
    </style>

    <style name="CafeFontButton" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:fontFamily">@font/cafe_font</item>
    </style>

    <style name="CafeFontEditText" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/cafe_font</item>
    </style>
    <!--  뷰별로 폰트 적용 끝  -->

</resources>
